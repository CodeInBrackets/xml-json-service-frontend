.dropbtn 
    background-color: #1565C0
    color: white
    min-width: 70px
    height: 35px
    border-radius: 10px
    border: none
    cursor: pointer

.dropdown 
    position: relative
    display: inline-block

.dropdown-content 
    display: none
    position: absolute
    background-color: white
    min-width: 70px
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2)
    z-index: 1

.dropdown-content a 
    color: black
    padding: 12px 16px
    text-decoration: none
    display: block

.dropdown-content a:hover 
    background-color: #f1f1f1

.dropdown:hover .dropdown-content 
    display: block

.dropdown:hover .dropbtn 
    background-color: #1565C0

#command_dropdown
    float: right

#command_name
    float: left
